        <TextBlock x:Name="txtBlk2" HorizontalAlignment="Left" Margin="403,142,0,0" TextWrapping="Wrap" Text="2" VerticalAlignment="Top" Height="30" Width="70"/>
        <TextBlock x:Name="txtBlk3" HorizontalAlignment="Left" Margin="548,141,0,0" TextWrapping="Wrap" Text="3" VerticalAlignment="Top" Height="30" Width="70"/>
        <TextBlock x:Name="txtBlk4" HorizontalAlignment="Left" Margin="254,271,0,0" TextWrapping="Wrap" Text="4" VerticalAlignment="Top" Height="30" Width="70"/>
        <TextBlock x:Name="txtBlk5" HorizontalAlignment="Left" Margin="403,274,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Height="30" Width="70"/>
        <TextBlock x:Name="txtBlk6" HorizontalAlignment="Left" Margin="548,277,0,0" TextWrapping="Wrap" Text="6" VerticalAlignment="Top" Height="30" Width="70"/>
        <TextBlock x:Name="txtBlk7" HorizontalAlignment="Left" Margin="254,384,0,0" TextWrapping="Wrap" Text="7" VerticalAlignment="Top" Height="30" Width="70"/>
        <TextBlock x:Name="txtBlk8" HorizontalAlignment="Left" Margin="403,384,0,0" TextWrapping="Wrap" Text="8" VerticalAlignment="Top" Height="30" Width="70"/>
        <TextBlock x:Name="txtBlk9" HorizontalAlignment="Left" Margin="548,384,0,0" TextWrapping="Wrap" Text="9" VerticalAlignment="Top" Height="30" Width="70"/>
        <TextBlock x:Name="txtBlkGameInfo" HorizontalAlignment="Left" Margin="245,458,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="373" Height="45"/>

    </Grid>
</Window>
