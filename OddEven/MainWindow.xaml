<Window x:Class="OddEven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OddEven"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="OddButton" Content="Button" HorizontalAlignment="Left" Margin="251,153,0,0" VerticalAlignment="Top" Width="131" Height="28" Click="OddButton_Click"/>
        <TextBlock x:Name="TxtBlkAnswer" HorizontalAlignment="Left" Margin="251,202,0,0" TextWrapping="Wrap" Text="Odd Or Even" VerticalAlignment="Top" Width="131" Height="27" FontSize="18" TextAlignment="Center"/>
        <TextBox x:Name="txtBoxNumberIn" HorizontalAlignment="Left" Height="26" Margin="251,95,0,0" TextWrapping="Wrap" Text="Enter Number" VerticalAlignment="Top" Width="131" FontSize="18" TextAlignment="Center" GotFocus="txtBoxNumberIn_GotFocus"/>

    </Grid>
</Window>
